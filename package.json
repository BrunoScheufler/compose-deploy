    "compose-deploy": "build/index.js",
    "cdeploy": "build/index.js"
  },
  "repository": "https://github.com/BrunoScheufler/compose-deploy",
  "author": {
    "name": "Bruno Scheufler",
    "email": "bruno@brunoscheufler.com",
