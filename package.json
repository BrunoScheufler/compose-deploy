  },
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/execa": "0.9.0",
    "@types/js-yaml": "3.12.2",
    "@types/node": "10.14.15",
    "@types/yargs": "15.0.4",
    "@types/yup": "0.26.32",
    "prettier": "1.19.1",
    "semantic-release": "15.14.0",
    "tslint": "5.20.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@types/ssh2": "0.5.40",
